{
  "name": "tree-scopes",
  "displayName": "tree-scopes",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tree-scopes.createScope",
        "title": "Cr√©er un scope",
        "icon": {
          "light": "assets/icons/light/plus.svg",
          "dark": "assets/icons/dark/plus.svg"
        }
      },
      {
        "command": "tree-scopes.seeScope",
        "title": "Voir un scope",
        "icon": {
          "light": "assets/icons/light/eye.svg",
          "dark": "assets/icons/dark/eye.svg"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "tree-scopes",
          "name": "Tree scopes"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tree-scopes.createScope",
          "when": "view == tree-scopes",
          "group": "navigation"
        },
        {
          "command": "tree-scopes.seeScope",
          "when": "view == tree-scopes",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tree-scopes.editEntry",
          "when": "view == tree-scopes && viewItem == script",
          "group": "inline"
        },
        {
          "command": "tree-scopes.deleteEntry",
          "when": "view == tree-scopes && viewItem == script"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}